<% content_for :sidebar do %>
  <div data-hook="homepage_sidebar_navigation">
    <%= render partial: 'spree/shared/taxonomies' %>
  </div>
<% end %>

<div data-hook="homepage_products">
  <div id="welcome-wrapper">
    <div id="welcome-banner">
      <div class="overlay">
        <h2>Welcome to CedarCoast</h2>
        <p>
          Feel free to browse...
        </p>
      </div>
    </div>
  </div>

  <div id="greeting">
    <h2>All Products Handmade from Natural Ingrediants</h2>
    <p>Check out our wide range of Soaps, Candles and Organic Lip balms below</p>
  </div>

  <% @current_taxon.children.each do |taxon| %>
    <% @taxon = taxon %>
    <div class="taxon" data-hook="taxon">
      <h3 class="subtaxon-title home"><%= @taxon.name %></h5>
      <%= render partial: 'spree/shared/products', locals: { products: taxon_preview(@taxon), taxon: @taxon } %>
    </div>
  <% end %>

</div>
